{
  "ci": {
    "collect": {
      "url": "http://localhost",
      "numberOfRuns": 3,
      "settings": { "chromeFlags": "--no-sandbox" }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["warn", { "minScore": 0.9 }],
        "categories:seo": ["error", { "minScore": 1 }]
      }
    }
  }
}
